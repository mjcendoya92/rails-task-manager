<h1>My tasks</h1>

<ul>
<% @tasks.each do |task|%>
  <li>
    <%= link_to task.title, task_path(task) %> - <%= link_to "Delete",
  task_path(task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </li>
<% end %>
</ul>

<div>
  <%= link_to "Back to List", tasks_path %>
</div>
<div>
  <%= link_to "+ Add New Task", new_task_path %>
</div>
