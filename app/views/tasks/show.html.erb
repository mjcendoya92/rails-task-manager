<h1><%= @task.title %></h1>
<h2><%= @task.details %></h2>
<p><%= @task.completed %></p>

<div>
<%= link_to "Back to List", tasks_path %>
</div>
<div>
<%= link_to "Edit this Task", edit_task_path(@task) %>
</div>
<div>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
</div>
